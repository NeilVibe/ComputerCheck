#!/bin/bash
# PowerShell Admin Runner for WSL

if [ "$#" -eq 0 ]; then
    echo "Usage: ./psadmin 'PowerShell command'"
    echo "Example: ./psadmin 'Get-WinEvent -LogName Security -MaxEvents 5'"
    exit 1
fi

echo "$1" | /mnt/c/Windows/System32/WindowsPowerShell/v1.0/powershell.exe -NoProfile -Command "& '$PWD/run-elevated.ps1' -Command '$1'"